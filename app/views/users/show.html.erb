<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h2 class="mb-0">プロフィール</h2>
    <% if current_user.following?(@user) %>
    <%= link_to 'フォローを外す', user_relationships_path(@user.id), method: :delete, class: "btn-sm btn-danger" %>
    <% else %>
    <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class: "btn-sm btn-success" %>
    <% end %>
  </div>
  <!-- Card body -->
  <div class="card-body">
    <div class="d-lg-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center mb-4 mb-lg-0">
        <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
        <div class="ms-3">
          <h4 class="mb-0">Name</h4>
            <p class="mb-0 d-block"><%= @user.name %></p>

          <h4 class="mb-0">Hobby</h4>
            <p class="mb-0 d-block"><%= @user.hobby %></p>

          <h4 class="mb-0">Profile</h4>
            <p class="mb-0 d-block"><%= @user.profile %></p>
        </div>
      </div>
    </div>
  </div>
</div>
